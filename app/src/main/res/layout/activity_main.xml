<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/saving_label"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/savings_label" android:layout_marginTop="100dp"
            android:textSize="42dp" android:layout_marginBottom="588dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="@string/saving_value"
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:id="@+id/value_display" android:layout_marginTop="33dp"
            app:layout_constraintTop_toBottomOf="@+id/savings_label" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="149dp" android:layout_marginRight="149dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="146dp"
            android:layout_marginStart="146dp" android:textSize="24sp"/>
    <Button
            android:text="Change Balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/edit_balance_button" android:layout_marginTop="127dp"
            app:layout_constraintTop_toBottomOf="@+id/value_display" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="161dp" android:layout_marginStart="161dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="162dp"
            android:layout_marginRight="162dp"
            android:onClick="changeActivity"/>

</android.support.constraint.ConstraintLayout>